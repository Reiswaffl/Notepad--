<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.com.Notepad.View.MainSceneController"
            prefHeight="800.0" prefWidth="500.0">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" >
            <children>
                <HBox alignment="CENTER" spacing="150.0">
                    <children>
                        <Label  fx:id="userName" text="userName"/>
                        <Button mnemonicParsing="false" onAction="#changeUser" text="CHANGE USER"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <ScrollPane fx:id="scrollPane" prefWidth="450" prefHeight="550" >
                            <HBox alignment="CENTER" spacing="50.0">
                                <children>
                                    <Label fx:id="content" text="-->"></Label>
                                    <Label fx:id="content" text="My Content"></Label>
                                    <CheckBox></CheckBox>
                                </children>
                            </HBox>
                        </ScrollPane>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <MenuButton fx:id="day" text="DAY"></MenuButton>
                        <MenuButton fx:id="month" text="MONTH"></MenuButton>
                        <TextField fx:id="year" text="YEAR"></TextField>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
